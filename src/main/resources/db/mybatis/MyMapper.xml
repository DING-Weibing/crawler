<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.hcsp.MyMapper">
    <select id="selectNextAvailableLink" resultType="String">
        SELECT link
        FROM LINKS_TO_BE_PROCESSED
        LIMIT 1
    </select>
    <delete id="deleteToBeProcessedLink" parameterType="String">
        DELETE
        FROM LINKS_TO_BE_PROCESSED
        WHERE link = #{link}
    </delete>
    <delete id="deleteProcessedLink" parameterType="String">
        DELETE
        FROM LINKS_ALREADY_PROCESSED
        WHERE link = #{link}
    </delete>
    <insert id="insertNews" parameterType="com.github.hcsp.News">
        INSERT INTO NEWS (TITLE, CONTENT, URL, CREATED_AT, MODIFIED_AT)
        VALUES (#{title}, #{content}, #{url}, NOW(), NOW())
    </insert>
    <insert id="insertToBeProcessedLink" parameterType="String">
        INSERT INTO LINKS_TO_BE_PROCESSED (LINK)
        VALUES (#{link})
    </insert>
    <insert id="insertProcessedLink" parameterType="String">
        INSERT INTO LINKS_ALREADY_PROCESSED(LINK)
        VALUES (#{link})
    </insert>
    <select id="countProcessedLink" parameterType="String" resultType="int">
        SELECT COUNT(LINK)
        FROM LINKS_ALREADY_PROCESSED
        WHERE LINK = #{link}
    </select>
</mapper>